@code {
    private List<ExperimentInfo> _experiments = [];
    private bool _loading = true;
    private bool _activating = false;
    private bool _dataLoaded = false;
    private string? _error;

    private IEnumerable<ExperimentInfo> FilteredExperiments
    {
        get
        {
            var filtered = _experiments.AsEnumerable();

            if (!string.IsNullOrWhiteSpace(DemoState.ExperimentFilterCategory))
            {
                filtered = filtered.Where(e => e.Category.Equals(DemoState.ExperimentFilterCategory, StringComparison.OrdinalIgnoreCase));
            }

            if (!string.IsNullOrWhiteSpace(DemoState.ExperimentSearchQuery))
            {
                filtered = filtered.Where(e =>
                    e.DisplayName.Contains(DemoState.ExperimentSearchQuery, StringComparison.OrdinalIgnoreCase) ||
                    e.Name.Contains(DemoState.ExperimentSearchQuery, StringComparison.OrdinalIgnoreCase) ||
                    e.Description.Contains(DemoState.ExperimentSearchQuery, StringComparison.OrdinalIgnoreCase));
            }

            return filtered;
        }
    }

    protected override void OnInitialized()
    {
        DemoState.OnStateChanged += HandleStateChanged;
    }

    private void HandleStateChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        DemoState.OnStateChanged -= HandleStateChanged;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_dataLoaded)
        {
            _dataLoaded = true;
            await LoadExperiments();
            StateHasChanged();
        }
    }

    private async Task LoadExperiments()
    {
        _loading = true;
        _error = null;
        using var cts = new CancellationTokenSource(TimeSpan.FromSeconds(10));
        try
        {
            var experimentsTask = ExperimentApi.GetExperimentsAsync().WaitAsync(cts.Token);
            var killSwitchTask = ExperimentApi.GetKillSwitchStatusesAsync().WaitAsync(cts.Token);

            await Task.WhenAll(experimentsTask, killSwitchTask);

            _experiments = await experimentsTask;
            var killSwitches = await killSwitchTask;

            // Sync state with API
            DemoState.SyncVariantsFromApi(_experiments);
            DemoState.SyncKillSwitchesFromApi(killSwitches);
        }
        catch (OperationCanceledException)
        {
            _error = "Request timed out. Please try again.";
            _experiments = [];
        }
        catch (Exception ex)
        {
            _error = $"Failed to load experiments: {ex.Message}";
            _experiments = [];
        }
        finally
        {
            _loading = false;
        }
    }

    private string GetVariantDisplayName(ExperimentInfo exp)
    {
        var variant = exp.Variants.FirstOrDefault(v => v.Name == exp.ActiveVariant);
        return variant?.DisplayName ?? exp.ActiveVariant;
    }

    private void ToggleExperimentExpanded(string experimentName)
    {
        DemoState.ToggleExpanded("experiments", experimentName);
    }

    private async Task ToggleKillSwitchWithApi(string experimentName)
    {
        var newState = !DemoState.GetKillSwitch(experimentName);
        DemoState.SetKillSwitch(experimentName, newState);

        try
        {
            // Persist to API
            await ExperimentApi.UpdateKillSwitchAsync(new KillSwitchUpdate
            {
                Experiment = experimentName,
                Disabled = newState
            });
        }
        catch (Exception ex)
        {
            // Revert on error
            DemoState.SetKillSwitch(experimentName, !newState);
            _error = $"Failed to update kill switch: {ex.Message}";
        }
    }

    private async Task ActivateVariant(string experimentName, string variantName)
    {
        if (DemoState.GetKillSwitch(experimentName)) return;

        _activating = true;
        try
        {
            var result = await ExperimentApi.ActivateVariantAsync(experimentName, variantName);
            if (result != null)
            {
                var index = _experiments.FindIndex(e => e.Name == experimentName);
                if (index >= 0)
                {
                    _experiments[index] = result;
                }

                // Update centralized state
                DemoState.SetActiveVariant(experimentName, variantName);

                if (experimentName == "ui-theme")
                {
                    try
                    {
                        var theme = await ExperimentApi.GetThemeAsync();
                        ThemeService.SetTheme(theme);
                    }
                    catch { }
                }
            }
        }
        catch (Exception ex)
        {
            _error = $"Failed to activate variant: {ex.Message}";
        }
        finally
        {
            _activating = false;
        }
    }

    private async Task ResetToDefault(string experimentName)
    {
        var experiment = _experiments.FirstOrDefault(e => e.Name == experimentName);
        if (experiment?.Variants.Count > 0)
        {
            await ActivateVariant(experimentName, experiment.Variants[0].Name);
        }
    }
