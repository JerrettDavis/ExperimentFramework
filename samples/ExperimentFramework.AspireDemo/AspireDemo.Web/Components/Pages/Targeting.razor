@page "/targeting"
@using AspireDemo.Web
@using AspireDemo.Web.Components.Shared
@inject ExperimentApiClient ExperimentApi

<SetPageTitle Title="Targeting Rules - OptimizeLab" />

<div class="targeting-console">
    <!-- Header -->
    <header class="console-header">
        <div class="header-content">
            <div class="header-title">
                <h1>Targeting Rules</h1>
                <p class="header-subtitle">Control variant selection with user segmentation and attribute-based rules</p>
            </div>
            <div class="header-actions">
                <button class="btn-secondary" @onclick="LoadExperiments" disabled="@_loading">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M23 4v6h-6M1 20v-6h6M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"/>
                    </svg>
                    Refresh
                </button>
            </div>
        </div>
    </header>

    <!-- Info Banner -->
    <div class="info-banner">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
        </svg>
        <span>Targeting rules enable precise control over which users receive specific variants based on attributes like subscription tier, role, or region.</span>
    </div>

    @if (_loading)
    {
        <div class="loading">
            <div class="loading-spinner"></div>
        </div>
    }
    else
    {
        @if (!_experimentsWithTargeting.Any())
        {
            <div class="empty-state">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M12 8v4M12 16h.01"/>
                </svg>
                <p>No experiments have targeting rules configured</p>
            </div>
        }
        else
        {
            <!-- Targeting List -->
            <div class="targeting-list">
                @foreach (var experiment in _experimentsWithTargeting)
                {
                    <div class="targeting-card">
                        <div class="targeting-header">
                            <div>
                                <h3>@experiment.DisplayName</h3>
                                <p class="experiment-description">@experiment.Description</p>
                            </div>
                            <div class="rules-count">
                                @experiment.TargetingRules.Count @(experiment.TargetingRules.Count == 1 ? "Rule" : "Rules")
                            </div>
                        </div>

                        <!-- Rules List -->
                        <div class="rules-section">
                            @foreach (var (rule, index) in experiment.TargetingRules.OrderBy(r => r.Priority).Select((r, i) => (r, i)))
                            {
                                <div class="rule-item @(rule.Enabled ? "" : "disabled")">
                                    <div class="rule-priority">
                                        <span class="priority-badge">#@(index + 1)</span>
                                    </div>
                                    <div class="rule-content">
                                        <div class="rule-header">
                                            <span class="rule-name">@rule.Name</span>
                                            <div class="rule-controls">
                                                @if (!rule.Enabled)
                                                {
                                                    <span class="disabled-badge">Disabled</span>
                                                }
                                                <label class="toggle-switch">
                                                    <input type="checkbox" checked="@rule.Enabled" disabled />
                                                    <span class="toggle-slider"></span>
                                                </label>
                                            </div>
                                        </div>
                                        <p class="rule-description">@rule.Description</p>

                                        <!-- Conditions -->
                                        <div class="conditions">
                                            @foreach (var condition in rule.Conditions)
                                            {
                                                <div class="condition-tag">
                                                    <span class="condition-attribute">@condition.Attribute</span>
                                                    <span class="condition-operator">@GetOperatorDisplay(condition.Operator)</span>
                                                    <span class="condition-value">@condition.Value</span>
                                                </div>
                                            }
                                        </div>

                                        <!-- Target Variant -->
                                        <div class="rule-target">
                                            <span class="rule-arrow">→</span>
                                            <span class="target-variant">@rule.Variant</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Rule Evaluation Order -->
                        <div class="evaluation-note">
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
                            </svg>
                            <span>Rules are evaluated in priority order. First matching rule determines the variant.</span>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>

<style>
    .targeting-console {
        max-width: 1200px;
        margin: 0 auto;
    }

    .console-header {
        margin-bottom: 1.5rem;
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .header-title h1 {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--color-text-primary, #0f172a);
        margin: 0;
        letter-spacing: -0.02em;
    }

    .header-subtitle {
        font-size: 0.9rem;
        color: var(--color-text-secondary, #64748b);
        margin: 0.25rem 0 0;
    }

    .header-actions {
        display: flex;
        gap: 0.75rem;
    }

    .btn-secondary {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.625rem 1rem;
        border-radius: 8px;
        font-size: 0.875rem;
        font-weight: 500;
        border: none;
        cursor: pointer;
        transition: all 150ms ease;
        background: var(--color-bg-secondary, white);
        color: var(--color-text-primary, #0f172a);
        border: 1px solid var(--color-border, rgba(148, 163, 184, 0.3));
    }

    .btn-secondary:hover:not(:disabled) {
        background: var(--color-bg-tertiary, #f1f5f9);
    }

    .info-banner {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.875rem 1rem;
        background: rgba(59, 130, 246, 0.1);
        border: 1px solid rgba(59, 130, 246, 0.2);
        border-radius: 8px;
        color: #2563eb;
        margin-bottom: 1.5rem;
        font-size: 0.875rem;
    }

    .loading {
        display: flex;
        justify-content: center;
        padding: 4rem 2rem;
    }

    .loading-spinner {
        width: 32px;
        height: 32px;
        border: 3px solid var(--color-border, rgba(148, 163, 184, 0.3));
        border-top-color: var(--color-primary, #6366f1);
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }

    @@keyframes spin {
        to { transform: rotate(360deg); }
    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: var(--color-text-muted, #94a3b8);
    }

    .empty-state svg {
        margin-bottom: 1rem;
    }

    .empty-state p {
        margin: 0;
        font-size: 0.95rem;
    }

    .targeting-list {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .targeting-card {
        background: var(--color-bg-secondary, white);
        border: 1px solid var(--color-border, rgba(148, 163, 184, 0.2));
        border-radius: 12px;
        padding: 1.5rem;
    }

    .targeting-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1.5rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid var(--color-border, rgba(148, 163, 184, 0.15));
    }

    .targeting-header h3 {
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--color-text-primary, #0f172a);
        margin: 0 0 0.25rem;
    }

    .experiment-description {
        font-size: 0.875rem;
        color: var(--color-text-secondary, #64748b);
        margin: 0;
    }

    .rules-count {
        padding: 0.375rem 0.875rem;
        border-radius: 9999px;
        font-size: 0.75rem;
        font-weight: 600;
        background: rgba(99, 102, 241, 0.1);
        color: var(--color-primary, #6366f1);
    }

    .rules-section {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .rule-item {
        display: grid;
        grid-template-columns: 40px 1fr;
        gap: 1rem;
        padding: 1rem;
        background: var(--color-bg-tertiary, rgba(148, 163, 184, 0.05));
        border-radius: 8px;
        border: 1px solid transparent;
        transition: all 150ms ease;
    }

    .rule-item:hover {
        border-color: var(--color-border, rgba(148, 163, 184, 0.2));
    }

    .rule-item.disabled {
        opacity: 0.6;
    }

    .rule-priority {
        display: flex;
        align-items: flex-start;
        padding-top: 0.125rem;
    }

    .priority-badge {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 32px;
        height: 32px;
        border-radius: 50%;
        background: var(--color-primary, #6366f1);
        color: white;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .rule-content {
        flex: 1;
    }

    .rule-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
    }

    .rule-name {
        font-size: 0.95rem;
        font-weight: 600;
        color: var(--color-text-primary, #0f172a);
    }

    .rule-controls {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .disabled-badge {
        font-size: 0.7rem;
        font-weight: 600;
        padding: 0.2rem 0.5rem;
        border-radius: 4px;
        background: rgba(239, 68, 68, 0.1);
        color: #ef4444;
        text-transform: uppercase;
    }

    .toggle-switch {
        position: relative;
        width: 44px;
        height: 24px;
        cursor: pointer;
    }

    .toggle-switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }

    .toggle-slider {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: var(--color-border, rgba(148, 163, 184, 0.3));
        border-radius: 24px;
        transition: 0.3s;
    }

    .toggle-slider::before {
        content: '';
        position: absolute;
        width: 18px;
        height: 18px;
        left: 3px;
        bottom: 3px;
        background: white;
        border-radius: 50%;
        transition: 0.3s;
    }

    .toggle-switch input:checked + .toggle-slider {
        background: var(--color-primary, #6366f1);
    }

    .toggle-switch input:checked + .toggle-slider::before {
        transform: translateX(20px);
    }

    .rule-description {
        font-size: 0.85rem;
        color: var(--color-text-secondary, #64748b);
        margin: 0 0 0.75rem;
    }

    .conditions {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 0.75rem;
    }

    .condition-tag {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        padding: 0.375rem 0.75rem;
        background: var(--color-bg-secondary, white);
        border: 1px solid var(--color-border, rgba(148, 163, 184, 0.2));
        border-radius: 6px;
        font-size: 0.8rem;
        font-family: 'JetBrains Mono', 'Fira Code', monospace;
    }

    .condition-attribute {
        color: #8b5cf6;
        font-weight: 600;
    }

    .condition-operator {
        color: var(--color-text-muted, #94a3b8);
    }

    .condition-value {
        color: #10b981;
        font-weight: 500;
    }

    .rule-target {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding-top: 0.75rem;
        border-top: 1px solid var(--color-border, rgba(148, 163, 184, 0.1));
    }

    .rule-arrow {
        font-size: 1rem;
        color: var(--color-text-muted, #94a3b8);
    }

    .target-variant {
        font-size: 0.85rem;
        font-weight: 600;
        padding: 0.25rem 0.75rem;
        background: var(--color-primary, #6366f1);
        color: white;
        border-radius: 6px;
    }

    .evaluation-note {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1rem;
        background: rgba(245, 158, 11, 0.05);
        border: 1px solid rgba(245, 158, 11, 0.2);
        border-radius: 6px;
        font-size: 0.8rem;
        color: #d97706;
    }
</style>

@code {
    private List<ExperimentInfo> _experiments = [];
    private bool _loading = true;

    private IEnumerable<ExperimentInfo> _experimentsWithTargeting =>
        _experiments.Where(e => e.TargetingRules.Any());

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadExperiments();
            StateHasChanged();
        }
    }

    private async Task LoadExperiments()
    {
        _loading = true;
        try
        {
            _experiments = await ExperimentApi.GetExperimentsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Failed to load experiments: {ex.Message}");
            _experiments = [];
        }
        finally
        {
            _loading = false;
        }
    }

    private string GetOperatorDisplay(string op) => op switch
    {
        "equals" => "=",
        "in" => "∈",
        "regex" => "~",
        "greaterThan" => ">",
        "lessThan" => "<",
        _ => op
    };
}
