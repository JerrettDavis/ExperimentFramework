@page "/"

<PageTitle>ExperimentFramework Demo</PageTitle>

<div class="home-page">
    <div class="hero-section">
        <h1>ExperimentFramework</h1>
        <p class="hero-subtitle">A powerful .NET library for A/B testing and feature experimentation</p>
        <div class="hero-actions">
            <a href="experiments" class="btn-primary">View Experiments</a>
            <a href="demo" class="btn-secondary">Try Live Demo</a>
        </div>
    </div>

    <div class="features-section">
        <h2>Demo Features</h2>
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon experiment-icon">A/B</div>
                <h3>Experiment Dashboard</h3>
                <p>View and manage all your experiments in one place. Toggle between variants in real-time and see instant results.</p>
                <a href="experiments">Go to Dashboard ></a>
            </div>

            <div class="feature-card">
                <div class="feature-icon demo-icon">></div>
                <h3>Live Demo</h3>
                <p>Experience experiments in action. Test pricing strategies, notifications, recommendations, and themes.</p>
                <a href="demo">Try Demo ></a>
            </div>

            <div class="feature-card">
                <div class="feature-icon analytics-icon">#</div>
                <h3>Analytics</h3>
                <p>Track experiment usage statistics and view the audit log for all system events.</p>
                <a href="analytics">View Analytics ></a>
            </div>
        </div>
    </div>

    <div class="experiments-preview">
        <h2>Active Experiments</h2>
        <div class="experiment-list">
            <div class="experiment-item">
                <span class="exp-badge revenue">Revenue</span>
                <div class="exp-info">
                    <strong>Pricing Strategy</strong>
                    <span>Compare tiered, flat, and volume pricing models</span>
                </div>
            </div>
            <div class="experiment-item">
                <span class="exp-badge engagement">Engagement</span>
                <div class="exp-info">
                    <strong>Notification Style</strong>
                    <span>Test standard vs personalized messaging</span>
                </div>
            </div>
            <div class="experiment-item">
                <span class="exp-badge engagement">Engagement</span>
                <div class="exp-info">
                    <strong>Recommendation Algorithm</strong>
                    <span>Compare basic, AI-powered, and collaborative filtering</span>
                </div>
            </div>
            <div class="experiment-item">
                <span class="exp-badge ux">UX</span>
                <div class="exp-info">
                    <strong>UI Theme</strong>
                    <span>Test light, dark, and system themes</span>
                </div>
            </div>
        </div>
    </div>

    <div class="tech-section">
        <h2>Built With</h2>
        <div class="tech-badges">
            <span class="tech-badge">.NET Aspire</span>
            <span class="tech-badge">Blazor Server</span>
            <span class="tech-badge">ExperimentFramework</span>
            <span class="tech-badge">Minimal APIs</span>
        </div>
    </div>
</div>

