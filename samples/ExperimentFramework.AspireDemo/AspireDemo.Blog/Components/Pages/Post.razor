@page "/post/{Slug}"
@inject BlogApiClient Api
@inject NavigationManager Navigation

<PageTitle>@(post?.Title ?? "Post") - TechBlog</PageTitle>

@if (loading)
{
    <div class="loading">
        <div class="loading-spinner"></div>
    </div>
}
else if (post == null)
{
    <div class="container">
        <div class="page-section">
            <div class="empty-state">
                <div class="empty-state-icon">?</div>
                <h2>Post Not Found</h2>
                <p>The post you're looking for doesn't exist or has been removed.</p>
                <a href="/" class="btn btn-primary">Back to Home</a>
            </div>
        </div>
    </div>
}
else
{
    <!-- Post Header -->
    <div class="post-header">
        <div class="container">
            <div class="post-header-content">
                <div class="post-categories">
                    @foreach (var cat in post.Categories)
                    {
                        <span class="tag tag-primary" style="background-color: @(cat.Color ?? "#3b82f6")20; color: @(cat.Color ?? "#3b82f6")">
                            @cat.Name
                        </span>
                    }
                </div>
                <h1 class="post-title">@post.Title</h1>
                <div class="post-meta">
                    @if (post.Author != null)
                    {
                        <div class="post-author">
                            <img src="@post.Author.AvatarUrl" alt="@post.Author.Name" class="author-avatar-md" />
                            <div class="author-details">
                                <span class="author-name">@post.Author.Name</span>
                                <span class="post-date">@FormatDate(post.PublishedAt ?? post.CreatedAt) - @post.ReadTimeMinutes min read</span>
                            </div>
                        </div>
                    }
                    <div class="post-stats">
                        <span class="stat-item">@post.ViewCount views</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Featured Image -->
    @if (!string.IsNullOrEmpty(post.FeaturedImage))
    {
        <div class="featured-image-container">
            <img src="@post.FeaturedImage" alt="@post.Title" class="featured-image" />
        </div>
    }

    <div class="container">
        <div class="post-layout">
            <!-- Post Content -->
            <article class="post-content">
                <div class="prose">
                    @((MarkupString)RenderContent(post.Content))
                </div>

                <!-- Tags -->
                @if (post.Tags.Any())
                {
                    <div class="post-tags">
                        <h4>Tags</h4>
                        <div class="tags">
                            @foreach (var tag in post.Tags)
                            {
                                <span class="tag">#@tag</span>
                            }
                        </div>
                    </div>
                }

                <!-- Syndication Links -->
                @if (post.SyndicationLinks.Any())
                {
                    <div class="syndication-links">
                        <h4>Also published on</h4>
                        <div class="syndication-buttons">
                            @foreach (var link in post.SyndicationLinks)
                            {
                                <a href="@link.Value" target="_blank" class="syndication-btn">
                                    @link.Key
                                </a>
                            }
                        </div>
                    </div>
                }
            </article>

            <!-- Sidebar -->
            <aside class="post-sidebar">
                <!-- Author Card -->
                @if (post.Author != null)
                {
                    <div class="sidebar-section author-bio-card">
                        <img src="@post.Author.AvatarUrl" alt="@post.Author.Name" class="author-avatar-xl" />
                        <h3>@post.Author.Name</h3>
                        <p class="author-bio">@post.Author.Bio</p>
                        <div class="author-social">
                            @if (!string.IsNullOrEmpty(post.Author.TwitterHandle))
                            {
                                <a href="https://twitter.com/@post.Author.TwitterHandle" target="_blank" class="social-link">
                                    Twitter
                                </a>
                            }
                            @if (!string.IsNullOrEmpty(post.Author.GitHubHandle))
                            {
                                <a href="https://github.com/@post.Author.GitHubHandle" target="_blank" class="social-link">
                                    GitHub
                                </a>
                            }
                        </div>
                    </div>
                }

                <!-- Related Posts -->
                @if (relatedPosts.Any())
                {
                    <div class="sidebar-section">
                        <h3 class="sidebar-title">Related Posts</h3>
                        @foreach (var related in relatedPosts)
                        {
                            <a href="/post/@related.Slug" class="related-post">
                                <span class="related-title">@related.Title</span>
                                <span class="related-meta">@related.ReadTimeMinutes min read</span>
                            </a>
                        }
                    </div>
                }
            </aside>
        </div>
    </div>
}

