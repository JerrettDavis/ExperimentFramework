@page "/dashboard/hypothesis"
@using ExperimentFramework.Dashboard.UI.Services
@inject ExperimentApiClient ExperimentApi

<PageTitle>Hypothesis Testing - Experiment Dashboard</PageTitle>

<div class="hypothesis-console">
    <!-- Header -->
    <header class="console-header">
        <div class="header-content">
            <div class="header-title">
                <h1>Hypothesis Testing</h1>
                <p class="header-subtitle">Define scientific hypotheses and evaluate statistical significance</p>
            </div>
            <div class="header-actions">
                <button class="btn-secondary" @onclick="LoadExperiments" disabled="@_loading">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M23 4v6h-6M1 20v-6h6M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"/>
                    </svg>
                    Refresh
                </button>
            </div>
        </div>
    </header>

    <!-- Info Banner -->
    <div class="info-banner">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
        </svg>
        <span>Pre-register hypotheses before analysis to prevent p-hacking and ensure rigorous scientific experimentation.</span>
    </div>

    @if (_loading)
    {
        <div class="loading">
            <div class="loading-spinner"></div>
        </div>
    }
    else
    {
        @if (!_experimentsWithHypothesis.Any())
        {
            <div class="empty-state">
                <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <circle cx="12" cy="12" r="10"/>
                    <path d="M12 8v4M12 16h.01"/>
                </svg>
                <p>No experiments have hypothesis definitions</p>
            </div>
        }
        else
        {
            <!-- Hypothesis List -->
            <div class="hypothesis-list">
                @foreach (var experiment in _experimentsWithHypothesis)
                {
                    var hypothesis = experiment.Hypothesis!;
                    var results = hypothesis.Results;

                    <div class="hypothesis-card">
                        <div class="hypothesis-header">
                            <div>
                                <h3>@experiment.DisplayName</h3>
                                <div class="hypothesis-status-badge @hypothesis.Status.ToString().ToLower()">
                                    @hypothesis.Status
                                </div>
                            </div>
                        </div>

                        <!-- Hypothesis Statement -->
                        <div class="hypothesis-section">
                            <h4>Hypothesis</h4>
                            <div class="hypothesis-statement">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                                </svg>
                                <p>@hypothesis.Statement</p>
                            </div>
                        </div>

                        <!-- Test Design -->
                        <div class="hypothesis-section">
                            <h4>Test Design</h4>
                            <div class="design-grid">
                                <div class="design-item">
                                    <span class="design-label">Test Type</span>
                                    <span class="design-value">@hypothesis.TestType</span>
                                </div>
                                <div class="design-item">
                                    <span class="design-label">Primary Metric</span>
                                    <span class="design-value">@hypothesis.PrimaryMetric</span>
                                </div>
                                <div class="design-item">
                                    <span class="design-label">Alpha Level</span>
                                    <span class="design-value">@hypothesis.AlphaLevel.ToString("P2")</span>
                                </div>
                                <div class="design-item">
                                    <span class="design-label">Power</span>
                                    <span class="design-value">@hypothesis.PowerLevel.ToString("P0")</span>
                                </div>
                                <div class="design-item">
                                    <span class="design-label">Expected Effect</span>
                                    <span class="design-value">@hypothesis.ExpectedEffectSize.ToString("P1")</span>
                                </div>
                                <div class="design-item">
                                    <span class="design-label">Min Sample Size</span>
                                    <span class="design-value">@hypothesis.MinimumSampleSize.ToString("N0")</span>
                                </div>
                            </div>
                        </div>

                        <!-- Secondary Metrics -->
                        @if (hypothesis.SecondaryMetrics.Any())
                        {
                            <div class="hypothesis-section">
                                <h4>Secondary Metrics</h4>
                                <div class="metrics-tags">
                                    @foreach (var metric in hypothesis.SecondaryMetrics)
                                    {
                                        <span class="metric-tag">@metric</span>
                                    }
                                </div>
                            </div>
                        }

                        <!-- Results (if available) -->
                        @if (results != null)
                        {
                            <div class="results-section">
                                <div class="results-header">
                                    <h4>Statistical Results</h4>
                                    @if (results.IsSignificant)
                                    {
                                        <div class="significance-badge significant">
                                            <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                                                <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
                                            </svg>
                                            Statistically Significant
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="significance-badge not-significant">
                                            Non-Significant
                                        </div>
                                    }
                                </div>

                                <!-- Sample Sizes -->
                                <div class="samples-grid">
                                    <div class="sample-card">
                                        <span class="sample-label">Control Samples</span>
                                        <span class="sample-value">@results.ControlSamples.ToString("N0")</span>
                                        <span class="sample-mean">Mean: @results.ControlMean.ToString("P2")</span>
                                    </div>
                                    <div class="sample-card treatment">
                                        <span class="sample-label">Treatment Samples</span>
                                        <span class="sample-value">@results.TreatmentSamples.ToString("N0")</span>
                                        <span class="sample-mean">Mean: @results.TreatmentMean.ToString("P2")</span>
                                    </div>
                                </div>

                                <!-- Statistical Metrics -->
                                <div class="stats-grid">
                                    <div class="stat-item">
                                        <span class="stat-label">Effect Size</span>
                                        <span class="stat-value highlight">@results.EffectSize.ToString("P1")</span>
                                    </div>
                                    <div class="stat-item">
                                        <span class="stat-label">P-Value</span>
                                        <span class="stat-value @(results.PValue < hypothesis.AlphaLevel ? "significant" : "")">
                                            @results.PValue.ToString("0.####")
                                        </span>
                                    </div>
                                    <div class="stat-item">
                                        <span class="stat-label">95% CI Lower</span>
                                        <span class="stat-value">@results.ConfidenceIntervalLower.ToString("P2")</span>
                                    </div>
                                    <div class="stat-item">
                                        <span class="stat-label">95% CI Upper</span>
                                        <span class="stat-value">@results.ConfidenceIntervalUpper.ToString("P2")</span>
                                    </div>
                                </div>

                                <!-- Conclusion -->
                                <div class="conclusion">
                                    <h5>Conclusion</h5>
                                    <p>@results.Conclusion</p>
                                    <div class="analysis-meta">
                                        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                            <circle cx="12" cy="12" r="10"/>
                                            <path d="M12 6v6l4 2"/>
                                        </svg>
                                        <span>Analyzed @results.AnalyzedAt.ToString("MMM d, yyyy h:mm tt")</span>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="no-results">
                                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                                    <path d="M9 11l3 3L22 4"/>
                                    <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"/>
                                </svg>
                                <p>No results available yet</p>
                                <span class="no-results-hint">Collecting data... (@(hypothesis.MinimumSampleSize) samples required)</span>
                            </div>
                        }
                    </div>
                }
            </div>
        }
    }
</div>

