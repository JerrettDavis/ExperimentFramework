    }
</style>

@code {
    private List<ExperimentInfo> _experiments = [];
    private bool _loading = true;

    private IEnumerable<ExperimentInfo> _experimentsWithHypothesis =>
        _experiments.Where(e => e.Hypothesis != null);

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await SeedDemoData();
            await LoadExperiments();
            await LoadRealTimeResults();
            StateHasChanged();
        }
    }

    private async Task SeedDemoData()
    {
        try
        {
            await ExperimentApi.HttpClient.PostAsync("/api/metrics/seed-demo-data", null);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Failed to seed demo data: {ex.Message}");
        }
    }

    private async Task LoadExperiments()
    {
        _loading = true;
        try
        {
            _experiments = await ExperimentApi.GetExperimentsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Failed to load experiments: {ex.Message}");
            _experiments = [];
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task LoadRealTimeResults()
    {
        foreach (var experiment in _experiments.Where(e => e.Hypothesis != null))
        {
            try
            {
                var response = await ExperimentApi.HttpClient.GetAsync($"/api/hypothesis/{experiment.Name}/results");
                if (response.IsSuccessStatusCode)
                {
                    var json = await response.Content.ReadAsStringAsync();
                    var result = System.Text.Json.JsonSerializer.Deserialize<HypothesisResultResponse>(json);
                    if (result?.Hypothesis?.Results != null)
                    {
                        experiment.Hypothesis.Results = result.Hypothesis.Results;
                        experiment.Hypothesis.Status = result.Hypothesis.Status;
                    }
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Failed to load results for {experiment.Name}: {ex.Message}");
            }
        }
    }

    private class HypothesisResultResponse
    {
        public HypothesisInfo? Hypothesis { get; set; }
    }
}
