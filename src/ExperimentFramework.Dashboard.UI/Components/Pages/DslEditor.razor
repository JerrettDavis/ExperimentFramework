@page "/dashboard/dsl"
@using ExperimentFramework.Dashboard.UI.Services
@using ExperimentFramework.Dashboard.UI.Models
@using ExperimentFramework.Dashboard.UI.Components.Shared
@inject ExperimentApiClient ExperimentApi
@inject IJSRuntime JS

<PageTitle>DSL Editor - Experiment Dashboard</PageTitle>

<div class="dsl-editor-page">
    <div class="page-header">
        <div class="header-content">
            <h1>DSL Configuration Editor</h1>
            <p class="subtitle">Edit and apply YAML configuration to running experiments</p>
        </div>
        <div class="header-actions">
            <button class="btn-secondary" @onclick="LoadCurrentConfig" disabled="@_loading">
                @if (_loadingCurrent)
                {
                    <span class="btn-spinner"></span>
                }
                Load Current
            </button>
            <button class="btn-secondary" @onclick="ValidateConfig" disabled="@_loading">
                @if (_validating)
                {
                    <span class="btn-spinner"></span>
                }
                Validate
            </button>
            <button class="btn-primary" @onclick="ShowApplyConfirmation" disabled="@(!_isValid || _loading)">
                @if (_applying)
                {
                    <span class="btn-spinner"></span>
                }
                Apply Changes
            </button>
        </div>
    </div>

    <div class="editor-layout">
        <!-- Monaco Editor -->
        <div class="editor-panel">
            <div class="panel-header">
                <span class="panel-title">YAML Configuration</span>
                <span class="status-indicator @(_isValid ? "valid" : _hasErrors ? "invalid" : "")">
                    @if (_isValid)
                    {
                        <span>Valid</span>
                    }
                    else if (_hasErrors)
                    {
                        <span>@_errors.Count error(s)</span>
                    }
                </span>
            </div>
            <MonacoEditor @ref="_editor"
                          Value="@_yamlContent"
                          ValueChanged="OnYamlChanged"
                          Height="calc(100vh - 280px)"
                          Language="yaml"
                          Minimap="false"
                          FontSize="14"
                          Markers="@_editorMarkers" />
        </div>

        <!-- Side Panel -->
        <div class="side-panel">
            <!-- Validation Results -->
            <div class="panel validation-panel">
                <div class="panel-header">
                    <span class="panel-title">Validation Results</span>
                    @if (_errors.Count > 0 || _warnings.Count > 0)
                    {
                        <button class="clear-btn" @onclick="ClearValidation">Clear</button>
                    }
                </div>
                <div class="panel-content">
                    @if (_errors.Count == 0 && _warnings.Count == 0 && !_validating)
                    {
                        <div class="empty-state">
                            <span class="empty-icon">i</span>
                            <span>Click Validate to check your configuration</span>
                        </div>
                    }
                    else
                    {
                        @foreach (var error in _errors)
                        {
                            <div class="validation-item error" @onclick="() => GoToError(error)">
                                <span class="item-icon">X</span>
                                <div class="item-content">
                                    <span class="item-location">Line @error.Line</span>
                                    <span class="item-message">@error.Message</span>
                                </div>
                            </div>
                        }
                        @foreach (var warning in _warnings)
                        {
                            <div class="validation-item warning" @onclick="() => GoToError(warning)">
                                <span class="item-icon">!</span>
                                <div class="item-content">
                                    <span class="item-location">Line @warning.Line</span>
                                    <span class="item-message">@warning.Message</span>
                                </div>
                            </div>
                        }
                        @if (_isValid && _errors.Count == 0)
                        {
                            <div class="validation-item success">
                                <span class="item-icon">OK</span>
                                <div class="item-content">
                                    <span class="item-message">Configuration is valid</span>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>

            <!-- Preview Panel -->
            <div class="panel preview-panel">
                <div class="panel-header">
                    <span class="panel-title">Preview Changes</span>
                </div>
                <div class="panel-content">
                    @if (_previews.Count == 0)
                    {
                        <div class="empty-state">
                            <span class="empty-icon">?</span>
                            <span>Validate to preview changes</span>
                        </div>
                    }
                    else
                    {
                        @foreach (var preview in _previews)
                        {
                            <div class="preview-item @preview.Action">
                                <span class="preview-action">
                                    @(preview.Action switch
                                    {
                                        "create" => "+",
                                        "update" => "~",
                                        "remove" => "-",
                                        _ => "?"
                                    })
                                </span>
                                <div class="preview-details">
                                    <span class="preview-name">@preview.Name</span>
                                    <span class="preview-meta">@preview.TrialCount trial(s) - @preview.Action</span>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>

            <!-- Applied Changes -->
            @if (_lastApplyResult != null)
            {
                <div class="panel result-panel @(_lastApplyResult.Success ? "success" : "error")">
                    <div class="panel-header">
                        <span class="panel-title">Last Apply Result</span>
                    </div>
                    <div class="panel-content">
                        @if (_lastApplyResult.Success)
                        {
                            <div class="result-message success">
                                Successfully applied @_lastApplyResult.Changes.Count change(s)
                            </div>
                            @foreach (var change in _lastApplyResult.Changes)
                            {
                                <div class="change-item">
                                    <span class="change-action @change.Action">@change.Action</span>
                                    <span class="change-name">@change.Name</span>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="result-message error">
                                Failed to apply configuration
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Apply Confirmation Modal -->
    @if (_showApplyConfirmation)
    {
        <div class="modal-overlay" @onclick="HideApplyConfirmation">
            <div class="modal-dialog" @onclick:stopPropagation>
                <div class="modal-header">
                    <h3>Apply Configuration</h3>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to apply these changes?</p>
                    <div class="change-summary">
                        @{
                            var creates = _previews.Count(p => p.Action == "create");
                            var updates = _previews.Count(p => p.Action == "update");
                            var removes = _previews.Count(p => p.Action == "remove");
                        }
                        @if (creates > 0)
                        {
                            <span class="summary-item create">@creates new experiment(s)</span>
                        }
                        @if (updates > 0)
                        {
                            <span class="summary-item update">@updates update(s)</span>
                        }
                        @if (removes > 0)
                        {
                            <span class="summary-item remove">@removes removal(s)</span>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn-secondary" @onclick="HideApplyConfirmation">Cancel</button>
                    <button class="btn-primary" @onclick="ApplyConfig">Apply</button>
                </div>
            </div>
        </div>
    }
</div>

