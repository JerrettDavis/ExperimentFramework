@code {
    private MonacoEditor? _editor;
    private string _yamlContent = "";
    private bool _loading;
    private bool _loadingCurrent;
    private bool _validating;
    private bool _applying;
    private bool _isValid;
    private bool _hasErrors;
    private bool _showApplyConfirmation;

    private List<DslValidationError> _errors = [];
    private List<DslValidationError> _warnings = [];
    private List<ExperimentPreview> _previews = [];
    private List<EditorMarker> _editorMarkers = [];
    private DslApplyResponse? _lastApplyResult;

    private string _defaultYaml = @"# ExperimentFramework Configuration DSL
# Edit this YAML to configure experiments

experiments:
  - name: my-experiment
    metadata:
      displayName: ""My Experiment""
      description: ""Description of the experiment""
      category: ""Testing""
    trials:
      - serviceType: ""IMyService""
        selectionMode:
          type: configurationKey
          key: ""Experiments:MyExperiment""
        control:
          key: default
          implementationType: ""DefaultImplementation""
        conditions:
          - key: variant-a
            implementationType: ""VariantAImplementation""
        errorPolicy:
          type: fallbackToControl
";

    protected override async Task OnInitializedAsync()
    {
        // Automatically load current configuration on page load
        await LoadCurrentConfig();

        // Fall back to default sample if loading fails
        if (string.IsNullOrWhiteSpace(_yamlContent))
        {
            _yamlContent = _defaultYaml;
        }
    }

    private async Task LoadCurrentConfig()
    {
        _loadingCurrent = true;
        _loading = true;
        StateHasChanged();

        try
        {
            var current = await ExperimentApi.GetCurrentDslAsync();
            if (current != null)
            {
                _yamlContent = current.Yaml;
                if (_editor != null)
                {
                    await _editor.SetValueAsync(current.Yaml);
                }
                ClearValidation();
            }
        }
        catch (Exception ex)
        {
            _errors.Add(new DslValidationError
            {
                Message = $"Failed to load current configuration: {ex.Message}",
                Severity = "error",
                Line = 1,
                Column = 1
            });
        }
        finally
        {
            _loadingCurrent = false;
            _loading = false;
            StateHasChanged();
        }
    }

    private async Task ValidateConfig()
    {
        _validating = true;
        _loading = true;
        ClearValidation();
        StateHasChanged();

        try
        {
            var result = await ExperimentApi.ValidateDslAsync(_yamlContent);
            if (result != null)
            {
                _isValid = result.IsValid;
                _errors = result.Errors.Where(e => e.Severity == "error").ToList();
                _warnings = result.Errors.Where(e => e.Severity == "warning").ToList();
                _previews = result.ParsedExperiments;
                _hasErrors = _errors.Count > 0;

                // Update editor markers
                _editorMarkers = result.Errors.Select(e => new EditorMarker
                {
                    Line = e.Line,
                    Column = e.Column,
                    EndLine = e.EndLine,
                    EndColumn = e.EndColumn,
                    Message = e.Message,
                    Severity = e.Severity
                }).ToList();

                if (_editor != null)
                {
                    await _editor.SetMarkersAsync(_editorMarkers);
                }
            }
        }
        catch (Exception ex)
        {
            _errors.Add(new DslValidationError
            {
                Message = $"Validation request failed: {ex.Message}",
                Severity = "error",
                Line = 1,
                Column = 1
            });
            _hasErrors = true;
        }
        finally
        {
            _validating = false;
            _loading = false;
            StateHasChanged();
        }
    }

    private void ShowApplyConfirmation()
    {
        _showApplyConfirmation = true;
    }

    private void HideApplyConfirmation()
    {
        _showApplyConfirmation = false;
    }

    private async Task ApplyConfig()
    {
        HideApplyConfirmation();
        _applying = true;
        _loading = true;
        StateHasChanged();

        try
        {
            var result = await ExperimentApi.ApplyDslAsync(_yamlContent);
            _lastApplyResult = result;

            if (result?.Success == true)
            {
                // Refresh validation to show updated state
                await ValidateConfig();
            }
        }
        catch (Exception ex)
        {
            _lastApplyResult = new DslApplyResponse
            {
                Success = false,
                Errors = [new DslValidationError { Message = $"Apply request failed: {ex.Message}" }]
            };
        }
        finally
        {
            _applying = false;
            _loading = false;
            StateHasChanged();
        }
    }

    private void ClearValidation()
    {
        _errors.Clear();
        _warnings.Clear();
        _previews.Clear();
        _editorMarkers.Clear();
        _isValid = false;
        _hasErrors = false;
        _lastApplyResult = null;

        if (_editor != null)
        {
            _ = _editor.ClearMarkersAsync();
        }
    }

    private async Task OnYamlChanged(string newValue)
    {
        _yamlContent = newValue;
        // Clear previous validation when content changes
        if (_isValid || _hasErrors)
        {
            _isValid = false;
            _hasErrors = false;
        }
    }

    private async Task GoToError(DslValidationError error)
    {
        if (_editor != null)
        {
            await _editor.GoToLineAsync(error.Line, error.Column);
        }
    }
}
