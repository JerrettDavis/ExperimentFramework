@page "/dashboard/governance/policies"
@using ExperimentFramework.Dashboard.UI.Services
@inject ExperimentApiClient ExperimentApi

<PageTitle>Policy Dashboard - Experiment Dashboard</PageTitle>

<div class="governance-page">
    <div class="page-header">
        <h1>Policy Dashboard</h1>
        <p class="subtitle">Policy evaluation and compliance monitoring</p>
    </div>

    @if (_loading)
    {
        <div class="loading-state">
            <p>Loading experiments...</p>
        </div>
    }
    else if (_experiments.Count == 0)
    {
        <div class="empty-state">
            <p>No experiments found. Create an experiment to view policy evaluations.</p>
        </div>
    }
    else
    {
        <div class="experiment-selector">
            <label for="experiment-select">Select Experiment:</label>
            <select id="experiment-select" @onchange="OnExperimentSelected">
                <option value="">-- Select an experiment --</option>
                @foreach (var exp in _experiments)
                {
                    <option value="@exp.Name" selected="@(_selectedExperiment == exp.Name)">@exp.DisplayName (@exp.Name)</option>
                }
            </select>
        </div>

        @if (_selectedExperiment != null)
        {
            @if (_loadingPolicies)
            {
                <div class="loading-state">
                    <p>Loading policy evaluations...</p>
                </div>
            }
            else if (_policies.Count == 0)
            {
                <div class="info-message">
                    <div class="info-icon">ℹ️</div>
                    <div class="info-content">
                        <h3>Governance Not Configured</h3>
                        <p>Policy evaluation and compliance monitoring requires <code>IGovernancePersistenceBackplane</code> to be registered in your application's dependency injection container.</p>
                        <p>To enable policy tracking, add a governance persistence implementation such as:</p>
                        <ul>
                            <li>In-Memory persistence (for development/testing)</li>
                            <li>SQL Server persistence</li>
                            <li>Azure Cosmos DB persistence</li>
                            <li>Custom implementation of IGovernancePersistenceBackplane</li>
                        </ul>
                        <p>Once configured, you'll be able to define policies, track compliance, and monitor policy violations across your experiments.</p>
                    </div>
                </div>
            }
            else
            {
                <div class="compliance-summary">
                    <div class="summary-card compliant">
                        <div class="summary-icon">✓</div>
                        <div class="summary-content">
                            <span class="summary-label">Compliant</span>
                            <span class="summary-value">@_policies.Count(p => p.IsCompliant)</span>
                        </div>
                    </div>
                    <div class="summary-card non-compliant">
                        <div class="summary-icon">✗</div>
                        <div class="summary-content">
                            <span class="summary-label">Non-Compliant</span>
                            <span class="summary-value">@_policies.Count(p => !p.IsCompliant)</span>
                        </div>
                    </div>
                    <div class="summary-card total">
                        <div class="summary-icon">#</div>
                        <div class="summary-content">
                            <span class="summary-label">Total Policies</span>
                            <span class="summary-value">@_policies.Count</span>
                        </div>
                    </div>
                    <div class="summary-card compliance-rate @GetComplianceRateClass()">
                        <div class="summary-icon">%</div>
                        <div class="summary-content">
                            <span class="summary-label">Compliance Rate</span>
                            <span class="summary-value">@GetComplianceRate()%</span>
                        </div>
                    </div>
                </div>

                <div class="policies-grid">
                    @foreach (var policy in _policies.OrderByDescending(p => p.Timestamp))
                    {
                        <div class="policy-card @(policy.IsCompliant ? "compliant" : "non-compliant") @($"severity-{policy.Severity.ToLower()}")">
                            <div class="policy-header">
                                <div class="policy-name-row">
                                    <h3 class="policy-name">@policy.PolicyName</h3>
                                    @if (policy.IsCompliant)
                                    {
                                        <span class="status-badge compliant">✓ Compliant</span>
                                    }
                                    else
                                    {
                                        <span class="status-badge non-compliant">✗ Non-Compliant</span>
                                    }
                                </div>
                                <div class="policy-meta">
                                    <span class="policy-timestamp">Evaluated: @policy.Timestamp.ToString("g")</span>
                                </div>
                            </div>

                            <div class="policy-body">
                                @if (!string.IsNullOrEmpty(policy.Reason))
                                {
                                    <div class="policy-reason">
                                        <strong>Details:</strong> @policy.Reason
                                    </div>
                                }

                                <div class="policy-details">
                                    @if (!string.IsNullOrEmpty(policy.CurrentState))
                                    {
                                        <div class="detail-item">
                                            <span class="detail-label">Current State:</span>
                                            <span class="detail-value">@policy.CurrentState</span>
                                        </div>
                                    }
                                    @if (!string.IsNullOrEmpty(policy.TargetState))
                                    {
                                        <div class="detail-item">
                                            <span class="detail-label">Target State:</span>
                                            <span class="detail-value">@policy.TargetState</span>
                                        </div>
                                    }
                                    @if (!policy.IsCompliant)
                                    {
                                        <div class="detail-item">
                                            <span class="detail-label">Severity:</span>
                                            <span class="severity-badge severity-@policy.Severity.ToLower()">@policy.Severity</span>
                                        </div>
                                    }
                                </div>

                                <div class="policy-footer">
                                    <code class="policy-id">ID: @policy.EvaluationId</code>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        }
    }
</div>

