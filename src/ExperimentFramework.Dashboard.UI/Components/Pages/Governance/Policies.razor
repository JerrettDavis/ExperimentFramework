@code {
    private List<ExperimentInfo> _experiments = [];
    private string? _selectedExperiment;
    private List<PolicyEvaluationInfo> _policies = [];
    private bool _loading = true;
    private bool _loadingPolicies = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadExperiments();
    }

    private async Task LoadExperiments()
    {
        _loading = true;
        try
        {
            _experiments = await ExperimentApi.GetExperimentsAsync();
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task OnExperimentSelected(ChangeEventArgs e)
    {
        _selectedExperiment = e.Value?.ToString();
        if (!string.IsNullOrEmpty(_selectedExperiment))
        {
            await LoadPolicies();
        }
        else
        {
            _policies = [];
        }
    }

    private async Task LoadPolicies()
    {
        if (string.IsNullOrEmpty(_selectedExperiment)) return;

        _loadingPolicies = true;
        try
        {
            _policies = await ExperimentApi.GetPolicyEvaluationsAsync(_selectedExperiment);
        }
        finally
        {
            _loadingPolicies = false;
        }
    }

    private int GetComplianceRate()
    {
        if (_policies.Count == 0) return 0;
        return (int)Math.Round((_policies.Count(p => p.IsCompliant) * 100.0) / _policies.Count);
    }

    private string GetComplianceRateClass()
    {
        var rate = GetComplianceRate();
        if (rate >= 90) return "excellent";
        if (rate >= 70) return "good";
        return "poor";
    }
}
