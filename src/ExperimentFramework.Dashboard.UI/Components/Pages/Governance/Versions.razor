@code {
    private List<ExperimentInfo> _experiments = [];
    private string? _selectedExperiment;
    private List<ConfigurationVersionInfo> _versions = [];
    private bool _loading = true;
    private bool _loadingVersions = false;
    private bool _showVersionViewer = false;
    private ConfigurationVersionInfo? _viewingVersion;
    private bool _showRollbackDialog = false;
    private int _rollbackToVersion = 0;
    private bool _rolling = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadExperiments();
    }

    private async Task LoadExperiments()
    {
        _loading = true;
        try
        {
            _experiments = await ExperimentApi.GetExperimentsAsync();
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task OnExperimentSelected(ChangeEventArgs e)
    {
        _selectedExperiment = e.Value?.ToString();
        if (!string.IsNullOrEmpty(_selectedExperiment))
        {
            await LoadVersions();
        }
        else
        {
            _versions = [];
        }
    }

    private async Task LoadVersions()
    {
        if (string.IsNullOrEmpty(_selectedExperiment)) return;

        _loadingVersions = true;
        try
        {
            _versions = await ExperimentApi.GetConfigurationVersionsAsync(_selectedExperiment);
        }
        finally
        {
            _loadingVersions = false;
        }
    }

    private async Task ViewVersion(int versionNumber)
    {
        if (string.IsNullOrEmpty(_selectedExperiment)) return;

        _viewingVersion = await ExperimentApi.GetConfigurationVersionAsync(_selectedExperiment, versionNumber);
        _showVersionViewer = _viewingVersion != null;
    }

    private void CloseVersionViewer()
    {
        _showVersionViewer = false;
        _viewingVersion = null;
    }

    private void ShowRollbackDialog(int versionNumber)
    {
        _rollbackToVersion = versionNumber;
        _showRollbackDialog = true;
    }

    private void CancelRollback()
    {
        _showRollbackDialog = false;
        _rollbackToVersion = 0;
    }

    private async Task ConfirmRollback()
    {
        if (string.IsNullOrEmpty(_selectedExperiment)) return;

        _rolling = true;
        try
        {
            var success = await ExperimentApi.RollbackToVersionAsync(_selectedExperiment, _rollbackToVersion);
            if (success)
            {
                await LoadVersions();
                _showRollbackDialog = false;
            }
        }
        finally
        {
            _rolling = false;
        }
    }

    private string FormatJson(string json)
    {
        try
        {
            var jsonDoc = JsonDocument.Parse(json);
            return JsonSerializer.Serialize(jsonDoc, new JsonSerializerOptions { WriteIndented = true });
        }
        catch
        {
            return json;
        }
    }
}
