@page "/dashboard/governance/versions"
@using ExperimentFramework.Dashboard.UI.Services
@using System.Text.Json
@inject ExperimentApiClient ExperimentApi

<PageTitle>Version History - Experiment Dashboard</PageTitle>

<div class="governance-page">
    <div class="page-header">
        <h1>Version History</h1>
        <p class="subtitle">Version tracking with diff viewer and rollback capabilities</p>
    </div>

    @if (_loading)
    {
        <div class="loading-state">
            <p>Loading experiments...</p>
        </div>
    }
    else if (_experiments.Count == 0)
    {
        <div class="empty-state">
            <p>No experiments found. Create an experiment to track its versions.</p>
        </div>
    }
    else
    {
        <div class="experiment-selector">
            <label for="experiment-select">Select Experiment:</label>
            <select id="experiment-select" @onchange="OnExperimentSelected">
                <option value="">-- Select an experiment --</option>
                @foreach (var exp in _experiments)
                {
                    <option value="@exp.Name" selected="@(_selectedExperiment == exp.Name)">@exp.DisplayName (@exp.Name)</option>
                }
            </select>
        </div>

        @if (_selectedExperiment != null)
        {
            @if (_loadingVersions)
            {
                <div class="loading-state">
                    <p>Loading version history...</p>
                </div>
            }
            else if (_versions.Count == 0)
            {
                <div class="info-message">
                    <div class="info-icon">ℹ️</div>
                    <div class="info-content">
                        <h3>Governance Not Configured</h3>
                        <p>Configuration version tracking requires <code>IGovernancePersistenceBackplane</code> to be registered in your application's dependency injection container.</p>
                        <p>To enable version history and rollback capabilities, add a governance persistence implementation such as:</p>
                        <ul>
                            <li>In-Memory persistence (for development/testing)</li>
                            <li>SQL Server persistence</li>
                            <li>Azure Cosmos DB persistence</li>
                            <li>Custom implementation of IGovernancePersistenceBackplane</li>
                        </ul>
                        <p>Once configured, you'll be able to track all configuration changes, view version history with diff comparisons, and rollback to previous versions when needed.</p>
                    </div>
                </div>
            }
            else
            {
                <div class="versions-timeline">
                    @foreach (var version in _versions.OrderByDescending(v => v.VersionNumber))
                    {
                        var isLatest = version.VersionNumber == _versions.Max(v => v.VersionNumber);
                        <div class="version-card @(isLatest ? "latest" : "") @(version.IsRollback ? "rollback" : "")">
                            <div class="version-header">
                                <div class="version-number-section">
                                    <span class="version-number">v@version.VersionNumber</span>
                                    @if (isLatest)
                                    {
                                        <span class="version-badge latest">Latest</span>
                                    }
                                    @if (version.IsRollback)
                                    {
                                        <span class="version-badge rollback">Rollback from v@version.RolledBackFrom</span>
                                    }
                                </div>
                                <div class="version-actions">
                                    <button class="action-btn view" @onclick="() => ViewVersion(version.VersionNumber)">
                                        View
                                    </button>
                                    @if (!isLatest)
                                    {
                                        <button class="action-btn rollback" @onclick="() => ShowRollbackDialog(version.VersionNumber)" disabled="@_rolling">
                                            Rollback
                                        </button>
                                    }
                                </div>
                            </div>

                            <div class="version-meta">
                                <div class="meta-item">
                                    <span class="meta-label">Created:</span>
                                    <span class="meta-value">@version.CreatedAt.ToString("g")</span>
                                </div>
                                <div class="meta-item">
                                    <span class="meta-label">By:</span>
                                    <span class="meta-value">@(version.CreatedBy ?? "Unknown")</span>
                                </div>
                                @if (!string.IsNullOrEmpty(version.LifecycleState))
                                {
                                    <div class="meta-item">
                                        <span class="meta-label">State:</span>
                                        <span class="state-badge">@version.LifecycleState</span>
                                    </div>
                                }
                            </div>

                            @if (!string.IsNullOrEmpty(version.ChangeDescription))
                            {
                                <div class="version-description">
                                    @version.ChangeDescription
                                </div>
                            }

                            <div class="version-footer">
                                <code class="version-hash">Hash: @version.ConfigurationHash</code>
                            </div>
                        </div>
                    }
                </div>
            }
        }
    }
</div>

@if (_showVersionViewer && _viewingVersion != null)
{
    <div class="modal-overlay" @onclick="CloseVersionViewer">
        <div class="modal-content large" @onclick:stopPropagation="true">
            <div class="modal-header">
                <h3>Version @_viewingVersion.VersionNumber Configuration</h3>
                <button class="close-btn" @onclick="CloseVersionViewer">×</button>
            </div>
            <div class="modal-body">
                @if (!string.IsNullOrEmpty(_viewingVersion.ConfigurationJson))
                {
                    <div class="json-viewer">
                        <pre><code>@FormatJson(_viewingVersion.ConfigurationJson)</code></pre>
                    </div>
                }
                else
                {
                    <p class="empty-message">No configuration data available for this version.</p>
                }
            </div>
        </div>
    </div>
}

@if (_showRollbackDialog)
{
    <div class="modal-overlay" @onclick="CancelRollback">
        <div class="modal-content" @onclick:stopPropagation="true">
            <h3>Confirm Rollback to Version @_rollbackToVersion</h3>
            <div class="warning-message">
                <strong>⚠️ Warning:</strong> Rolling back will create a new version (v@(_versions.Max(v => v.VersionNumber) + 1)) with the configuration from version @_rollbackToVersion. This action cannot be undone.
            </div>
            <div class="modal-actions">
                <button class="btn-danger" @onclick="ConfirmRollback" disabled="@_rolling">
                    @if (_rolling)
                    {
                        <span>Rolling back...</span>
                    }
                    else
                    {
                        <span>Confirm Rollback</span>
                    }
                </button>
                <button class="btn-secondary" @onclick="CancelRollback" disabled="@_rolling">Cancel</button>
            </div>
        </div>
    </div>
}

