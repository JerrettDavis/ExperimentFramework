@page "/dashboard/rollout"
@using ExperimentFramework.Dashboard.UI.Services
@using ExperimentFramework.Dashboard.Abstractions
@inject ExperimentApiClient ExperimentApi
@implements IDisposable

<PageTitle>Rollout Management - Experiment Dashboard</PageTitle>

<div class="rollout-console">
    <!-- Header -->
    <header class="console-header">
        <div class="header-content">
            <div class="header-title">
                <h1>Rollout Management</h1>
                <p class="header-subtitle">Gradually roll out experiment variants to minimize risk</p>
            </div>
            <div class="header-actions">
                <button class="btn-secondary" @onclick="LoadExperiments" disabled="@_loading">
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M23 4v6h-6M1 20v-6h6M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"/>
                    </svg>
                    Refresh
                </button>
            </div>
        </div>
    </header>

    <!-- Info Banner -->
    <div class="info-banner">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-2h2v2zm0-4h-2V7h2v6z"/>
        </svg>
        <span>Rollout enables staged release of specific variants. Select an experiment below to configure a gradual rollout plan.</span>
    </div>

    @if (_loading)
    {
        <div class="loading">
            <div class="loading-spinner"></div>
        </div>
    }
    else
    {
        <!-- Experiment Selector -->
        <div class="experiment-selector">
            <label>Select Experiment</label>
            <select @bind="_selectedExperiment" @bind:after="OnExperimentSelected">
                <option value="">-- Choose an experiment --</option>
                @foreach (var exp in _experiments)
                {
                    <option value="@exp.Name">@exp.DisplayName (@exp.Variants.Count variants)</option>
                }
            </select>
        </div>

        @if (!string.IsNullOrEmpty(_selectedExperiment) && _selectedExperimentInfo != null)
        {
            <div class="rollout-manager">
                <!-- Experiment Info Panel -->
                <div class="experiment-info-panel">
                    <h3>@_selectedExperimentInfo.DisplayName</h3>
                    <p class="description">@_selectedExperimentInfo.Description</p>

                    <div class="variant-selector">
                        <label>Target Variant to Rollout</label>
                        <select @bind="_selectedVariant">
                            <option value="">-- Select variant --</option>
                            @foreach (var variant in _selectedExperimentInfo.Variants)
                            {
                                <option value="@variant.Name">@variant.DisplayName - @variant.Description</option>
                            }
                        </select>
                    </div>

                    @if (_rolloutConfig != null && _rolloutConfig.Enabled)
                    {
                        <div class="rollout-stats">
                            <div class="stat">
                                <span class="label">Total Users</span>
                                <span class="value">@_rolloutConfig.TotalUsers.ToString("N0")</span>
                            </div>
                            <div class="stat">
                                <span class="label">In Rollout</span>
                                <span class="value">@_rolloutConfig.UsersInRollout.ToString("N0")</span>
                            </div>
                            <div class="stat">
                                <span class="label">Current %</span>
                                <span class="value">@_rolloutConfig.Percentage%</span>
                            </div>
                        </div>
                    }
                </div>

                <!-- Rollout Configuration or Status -->
                @if (_rolloutConfig == null || !_rolloutConfig.Enabled)
                {
                    <!-- Create New Rollout Plan -->
                    <div class="create-rollout">
                        <h4>Create Rollout Plan</h4>
                        <p class="hint">Define stages to gradually increase the percentage of users receiving the variant</p>

                        @if (_rolloutStages.Any())
                        {
                            <div class="stages-editor">
                                @foreach (var (stage, index) in _rolloutStages.Select((s, i) => (s, i)))
                                {
                                    <div class="stage-editor">
                                        <div class="stage-number">Stage @(index + 1)</div>
                                        <input type="text" placeholder="Name" @bind="stage.Name" />
                                        <input type="number" placeholder="%" min="0" max="100" @bind="stage.Percentage" />
                                        <input type="number" placeholder="Hours" min="1" @bind="stage.DurationHours" />
                                        <button class="btn-icon-danger" @onclick="() => RemoveStage(index)">
                                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                                <path d="M3 6h18M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                                            </svg>
                                        </button>
                                    </div>
                                }
                            </div>
                        }

                        <div class="rollout-actions">
                            <button class="btn-secondary" @onclick="AddStage">
                                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M12 5v14M5 12h14"/>
                                </svg>
                                Add Stage
                            </button>
                            <button class="btn-primary" @onclick="StartRollout" disabled="@(!_rolloutStages.Any() || string.IsNullOrEmpty(_selectedVariant))">
                                <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M8 5v14l11-7z"/>
                                </svg>
                                Start Rollout
                            </button>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Active Rollout Display -->
                    <div class="rollout-card">
                        <div class="rollout-header">
                            <div>
                                <h4>Rolling out: <strong>@_rolloutConfig.TargetVariant</strong></h4>
                                <p class="started">Started: @(_rolloutConfig.StartDate?.ToString("MMM d, yyyy h:mm tt") ?? "N/A")</p>
                            </div>
                            <div class="rollout-status-badge @_rolloutConfig.Status.ToString().ToLower()">
                                @_rolloutConfig.Status
                            </div>
                        </div>

                        <!-- Progress Bar -->
                        <div class="rollout-progress-section">
                            <div class="progress-info">
                                <span class="progress-label">Rollout Progress</span>
                                <span class="progress-percentage">@_rolloutConfig.Percentage%</span>
                            </div>
                            <div class="progress-bar">
                                <div class="progress-fill" style="width: @(_rolloutConfig.Percentage)%"></div>
                            </div>
                        </div>

                        <!-- Stages Timeline -->
                        <div class="stages-section">
                            <h4>Rollout Stages</h4>
                            <div class="stages-timeline">
                                @foreach (var (stage, index) in _rolloutConfig.Stages.Select((s, i) => (s, i)))
                                {
                                    var isActive = stage.Status == RolloutStageStatus.Active;
                                    var isCompleted = stage.Status == RolloutStageStatus.Completed;
                                    var isPending = stage.Status == RolloutStageStatus.Pending;

                                    <div class="stage-item @stage.Status.ToString().ToLower()">
                                        <div class="stage-marker">
                                            @if (isCompleted)
                                            {
                                                <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                                                    <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
                                                </svg>
                                            }
                                            else if (isActive)
                                            {
                                                <div class="pulse-dot"></div>
                                            }
                                            else
                                            {
                                                <div class="pending-dot"></div>
                                            }
                                        </div>
                                        @if (index < _rolloutConfig.Stages.Count - 1)
                                        {
                                            <div class="stage-connector @(isCompleted ? "completed" : "")"></div>
                                        }
                                        <div class="stage-content">
                                            <div class="stage-name">@stage.Name</div>
                                            <div class="stage-details">
                                                <span class="stage-percentage">@stage.Percentage%</span>
                                                @if (stage.UsersAffected > 0)
                                                {
                                                    <span class="stage-users">~@stage.UsersAffected.ToString("N0") users</span>
                                                }
                                                @if (stage.ExecutedDate.HasValue)
                                                {
                                                    <span class="stage-date">Executed: @stage.ExecutedDate.Value.ToString("MMM d, h:mm tt")</span>
                                                }
                                                else if (stage.DurationHours.HasValue)
                                                {
                                                    <span class="stage-duration">Duration: @stage.DurationHours hrs</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Rollout Controls -->
                        <div class="rollout-actions">
                            @if (_rolloutConfig.Status == RolloutStatus.InProgress)
                            {
                                <button class="btn-secondary btn-sm" @onclick="PauseRollout" disabled="@_actionInProgress">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M6 4h4v16H6V4zm8 0h4v16h-4V4z"/>
                                    </svg>
                                    Pause
                                </button>
                                <button class="btn-primary btn-sm" @onclick="AdvanceStage" disabled="@_actionInProgress">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M3 12h18M15 5l7 7-7 7"/>
                                    </svg>
                                    Advance Stage
                                </button>
                                <button class="btn-danger btn-sm" @onclick="RollbackRollout" disabled="@_actionInProgress">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M3 12h18M9 5l-7 7 7 7"/>
                                    </svg>
                                    Rollback
                                </button>
                            }
                            else if (_rolloutConfig.Status == RolloutStatus.Paused || _rolloutConfig.Status == RolloutStatus.RolledBack)
                            {
                                <button class="btn-primary btn-sm" @onclick="ResumeRollout" disabled="@_actionInProgress">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M8 5v14l11-7z"/>
                                    </svg>
                                    @(_rolloutConfig.Status == RolloutStatus.RolledBack ? "Restart" : "Resume")
                                </button>
                            }
                            else if (_rolloutConfig.Status == RolloutStatus.Completed)
                            {
                                <div class="completion-message">
                                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                                        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"/>
                                    </svg>
                                    <span>Rollout completed successfully!</span>
                                </div>
                                <button class="btn-secondary btn-sm" @onclick="RestartRollout" disabled="@_actionInProgress">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M23 4v6h-6M1 20v-6h6M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"/>
                                    </svg>
                                    Restart from Beginning
                                </button>
                            }
                            <button class="btn-secondary btn-sm" @onclick="DeleteRollout" disabled="@_actionInProgress">
                                Delete Rollout
                            </button>
                        </div>
                    </div>
                }
            </div>
        }
    }
</div>

