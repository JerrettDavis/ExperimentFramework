@code {
    private List<Services.ExperimentInfo> _experiments = [];
    private bool _loading = true;
    private bool _actionInProgress = false;
    private string _selectedExperiment = "";
    private string _selectedVariant = "";
    private Services.ExperimentInfo? _selectedExperimentInfo;
    private RolloutConfiguration? _rolloutConfig;
    private List<RolloutStageDto> _rolloutStages = [];

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadExperiments();
            StateHasChanged();
        }
    }

    private async Task LoadExperiments()
    {
        _loading = true;
        try
        {
            _experiments = await ExperimentApi.GetExperimentsAsync();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Failed to load experiments: {ex.Message}");
            _experiments = [];
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task OnExperimentSelected()
    {
        _selectedExperimentInfo = _experiments.FirstOrDefault(e => e.Name == _selectedExperiment);
        _rolloutConfig = _selectedExperimentInfo?.Rollout;
        _selectedVariant = _rolloutConfig?.TargetVariant ?? "";

        // Initialize with default stages if no rollout exists
        if (_rolloutConfig == null || !_rolloutConfig.Enabled)
        {
            _rolloutStages = [
                new RolloutStageDto { Name = "Initial rollout", Percentage = 10, DurationHours = 24 },
                new RolloutStageDto { Name = "Expand to half", Percentage = 50, DurationHours = 48 },
                new RolloutStageDto { Name = "Full rollout", Percentage = 100, DurationHours = 72 }
            ];
        }
    }

    private void AddStage()
    {
        _rolloutStages.Add(new RolloutStageDto { Percentage = 10 });
    }

    private void RemoveStage(int index)
    {
        _rolloutStages.RemoveAt(index);
    }

    private async Task StartRollout()
    {
        if (string.IsNullOrEmpty(_selectedExperiment) || string.IsNullOrEmpty(_selectedVariant))
            return;

        _actionInProgress = true;
        try
        {
            var config = new RolloutConfiguration
            {
                ExperimentName = _selectedExperiment,
                Enabled = true,
                TargetVariant = _selectedVariant,
                Stages = _rolloutStages,
                Status = RolloutStatus.InProgress
            };

            var response = await ExperimentApi.HttpClient.PostAsJsonAsync(
                $"/api/rollout/{_selectedExperiment}/config", config);

            if (response.IsSuccessStatusCode)
            {
                _rolloutConfig = await response.Content.ReadFromJsonAsync<RolloutConfiguration>();
                await LoadExperiments(); // Refresh
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Failed to start rollout: {ex.Message}");
        }
        finally
        {
            _actionInProgress = false;
        }
    }

    private async Task AdvanceStage()
    {
        await PerformRolloutAction("advance");
    }

    private async Task PauseRollout()
    {
        await PerformRolloutAction("pause");
    }

    private async Task ResumeRollout()
    {
        await PerformRolloutAction("resume");
    }

    private async Task RollbackRollout()
    {
        await PerformRolloutAction("rollback");
    }

    private async Task RestartRollout()
    {
        await PerformRolloutAction("restart");
    }

    private async Task DeleteRollout()
    {
        _actionInProgress = true;
        try
        {
            var response = await ExperimentApi.HttpClient.DeleteAsync($"/api/rollout/{_selectedExperiment}/config");
            if (response.IsSuccessStatusCode)
            {
                _rolloutConfig = null;
                await LoadExperiments();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Failed to delete rollout: {ex.Message}");
        }
        finally
        {
            _actionInProgress = false;
        }
    }

    private async Task PerformRolloutAction(string action)
    {
        if (string.IsNullOrEmpty(_selectedExperiment)) return;

        _actionInProgress = true;
        try
        {
            var response = await ExperimentApi.HttpClient.PostAsync($"/api/rollout/{_selectedExperiment}/{action}", null);
            if (response.IsSuccessStatusCode)
            {
                _rolloutConfig = await response.Content.ReadFromJsonAsync<RolloutConfiguration>();
                await LoadExperiments();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Failed to {action} rollout: {ex.Message}");
        }
        finally
        {
            _actionInProgress = false;
        }
    }

