    .action-btn.secondary { background: #e5e7eb; color: #374151; }
    .action-btn.secondary:hover:not(:disabled) { background: #d1d5db; }
    .action-btn:disabled { opacity: 0.6; cursor: not-allowed; }

    :global(.theme-dark) .action-btn.secondary { background: #4b5563; color: #e5e7eb; }

    .btn-spinner {
        width: 14px;
