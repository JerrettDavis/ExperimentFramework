        border-radius: 8px;
        padding: 0.75rem;
        margin-bottom: 0.5rem;
    }

    .service-interface {
        font-size: 0.75rem;
        color: #8b5cf6;
        font-weight: 600;
        font-family: monospace;
    }

    .implementations {
