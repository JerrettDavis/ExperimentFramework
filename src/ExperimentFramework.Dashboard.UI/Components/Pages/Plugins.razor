        grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .stat-card {
        background: linear-gradient(135deg, #8b5cf6 0%, #6366f1 100%);
        border-radius: 12px;
        padding: 1.5rem;
        text-align: center;
        color: white;
    }

    .stat-number {
        display: block;
        font-size: 2.5rem;
        font-weight: bold;
