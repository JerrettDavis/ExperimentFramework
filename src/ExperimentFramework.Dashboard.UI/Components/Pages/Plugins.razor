    }

    :global(.theme-dark) .empty-state h3 {
        color: #e5e7eb;
    }

    :global(.theme-dark) .empty-state p {
        color: #9ca3af;
    }

    :global(.theme-dark) .audit-type {
        color: #e5e7eb;
    }

    :global(.theme-dark) .service-item {
        background: rgba(55, 65, 81, 0.5);
    }

    :global(.theme-dark) .impl-type {
        color: #e5e7eb;
        background: rgba(75, 85, 99, 0.5);
    }

    :global(.theme-dark) .plugin-info-row {
        background: rgba(55, 65, 81, 0.5);
    }

    :global(.theme-dark) .info-value {
