        color: #6b7280;
        font-family: monospace;
    }

    .status-badge {
        font-size: 0.65rem;
        padding: 0.125rem 0.5rem;
        border-radius: 9999px;
        font-weight: 600;
        text-transform: uppercase;
    }

    .status-badge.healthy { background: #d1fae5; color: #059669; }
    .status-badge.degraded { background: #fef3c7; color: #d97706; }
    .status-badge.unhealthy { background: #fee2e2; color: #dc2626; }

    .plugin-actions {
        display: flex;
        gap: 0.5rem;
    }

    .icon-btn {
