        border-radius: 12px;
        padding: 1.5rem;
        border: 1px solid rgba(128,128,128,0.2);
    }

    :global(.theme-dark) .audit-section { background: #1f2937 !important; border-color: #374151 !important; }

    .section-title {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
    }

    .section-title h2 {
