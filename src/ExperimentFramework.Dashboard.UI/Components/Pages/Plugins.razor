@page "/dashboard/plugins"
@using ExperimentFramework.Dashboard.UI.Services
@implements IDisposable
@inject ExperimentApiClient ExperimentApi
@inject DashboardStateService DashboardState

<PageTitle>Integrations - OptimizeLab</PageTitle>

<div class="plugins-page">
    <div class="page-header">
        <div class="header-content">
            <h1>Plugin System</h1>
            <p class="subtitle">Dynamically load and manage experiment strategy plugins</p>
        </div>
        <div class="header-actions">
            <button class="action-btn secondary" @onclick="RefreshPlugins" disabled="@_loading">
                @if (_loading) { <span class="btn-spinner"></span> }
                Refresh
            </button>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(_error))
    {
        <div class="error-banner">
            <span class="error-icon">!</span>
            <span>@_error</span>
            <button class="dismiss-btn" @onclick="() => _error = null">X</button>
        </div>
    }

    @if (!string.IsNullOrEmpty(_success))
    {
        <div class="success-banner">
            <span class="success-icon">OK</span>
            <span>@_success</span>
            <button class="dismiss-btn" @onclick="() => _success = null">X</button>
        </div>
    }

    <!-- Plugin System Stats -->
    <div class="stats-row">
        <div class="stat-card">
            <span class="stat-number @(_loading ? "skeleton-text" : "")">@(_loading ? "--" : _plugins.Count.ToString())</span>
            <span class="stat-label">Loaded Plugins</span>
        </div>
        <div class="stat-card">
            <span class="stat-number @(_loading ? "skeleton-text" : "")">@(_loading ? "--" : _plugins.Count(p => p.Status == "Healthy").ToString())</span>
            <span class="stat-label">Healthy</span>
        </div>
        <div class="stat-card">
            <span class="stat-number @(_loading ? "skeleton-text" : "")">@(_loading ? "--" : _plugins.Sum(p => p.Services.Count).ToString())</span>
            <span class="stat-label">Services</span>
        </div>
        <div class="stat-card">
            <span class="stat-number @(_loading ? "skeleton-text" : "")">@(_loading ? "--" : _plugins.Count(p => p.SupportsHotReload).ToString())</span>
            <span class="stat-label">Hot Reload</span>
        </div>
    </div>

    <!-- Plugins Grid -->
    <div class="plugins-grid">
        @if (_loading)
        {
            @for (int i = 0; i < 3; i++)
            {
                <div class="plugin-card skeleton-card">
                    <div class="plugin-header">
                        <div class="plugin-icon skeleton"></div>
                        <div class="plugin-title-area">
                            <h3 class="skeleton-text">Loading plugin...</h3>
                            <span class="skeleton-text">v0.0.0</span>
                        </div>
                    </div>
                    <p class="skeleton-text">Loading plugin details...</p>
                    <div class="skeleton-services"></div>
                </div>
            }
        }
        else if (_plugins.Count == 0)
        {
            <div class="empty-state">
                <span class="empty-icon">PLUG</span>
                <h3>No Plugins Available</h3>
                <p>No plugins were found during automatic discovery at startup. Add plugin assemblies to the configured plugin directory and restart the application.</p>
            </div>
        }
        else
        {
            @foreach (var plugin in _plugins)
            {
                var isExpanded = DashboardState.IsExpanded("plugins", plugin.Id);
                <div class="plugin-card @plugin.Status.ToLower()">
                    <div class="plugin-header">
                        <div class="plugin-icon @GetPluginIconClass(plugin)">
                            @GetPluginIconText(plugin)
                        </div>
                        <div class="plugin-title-area">
                            <h3>@plugin.Name</h3>
                            <div class="plugin-meta">
                                <span class="version">v@plugin.Version</span>
                                <span class="status-badge @plugin.Status.ToLower()">@plugin.Status</span>
                            </div>
                        </div>
                        <div class="plugin-actions">
                            @if (plugin.SupportsHotReload)
                            {
                                <button class="icon-btn" title="Reload" @onclick="() => ReloadPlugin(plugin.Id)" disabled="@_reloading">
                                    <span class="icon-reload">R</span>
                                </button>
                            }
                            <button class="icon-btn danger" title="Unload" @onclick="() => UnloadPlugin(plugin.Id)" disabled="@_reloading">
                                <span class="icon-unload">X</span>
                            </button>
                        </div>
                    </div>

                    <p class="plugin-description">@plugin.Description</p>

                    <!-- Plugin Info Row -->
                    <div class="plugin-info-row">
                        <div class="info-item">
                            <span class="info-label">Isolation</span>
                            <span class="info-value">@plugin.IsolationMode</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Load Time</span>
                            <span class="info-value">@plugin.LoadTime.ToString("g")</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Hot Reload</span>
                            <span class="info-value @(plugin.SupportsHotReload ? "enabled" : "disabled")">
                                @(plugin.SupportsHotReload ? "Enabled" : "Disabled")
                            </span>
                        </div>
                    </div>

                    <!-- Services Provided -->
                    <div class="services-section">
                        <div class="section-header" @onclick="() => ToggleExpanded(plugin.Id)">
                            <h4>Services (@plugin.Services.Count)</h4>
                            <span class="toggle-icon @(isExpanded ? "expanded" : "")">v</span>
                        </div>

                        @if (isExpanded)
                        {
                            <div class="services-list">
                                @foreach (var service in plugin.Services)
                                {
                                    <div class="service-item">
                                        <div class="service-header">
                                            <span class="service-interface">@service.Interface</span>
                                        </div>
                                        <div class="implementations">
                                            @foreach (var impl in service.Implementations)
                                            {
                                                var isActive = IsImplementationActive(service.Interface, plugin.Id, impl.Type);
                                                <div class="implementation @(isActive ? "active-impl" : "")">
                                                    <code class="impl-type">@impl.Type</code>
                                                    @if (!string.IsNullOrEmpty(impl.Alias))
                                                    {
                                                        <span class="impl-alias">@impl.Alias</span>
                                                    }
                                                    @if (isActive)
                                                    {
                                                        <span class="active-badge">ACTIVE</span>
                                                        <button class="clear-btn" @onclick="() => ClearImplementation(service.Interface)" title="Clear">
                                                            X
                                                        </button>
                                                    }
                                                    else
                                                    {
                                                        <button class="use-btn" @onclick="() => UseImplementation(plugin.Id, service.Interface, impl.Alias ?? impl.Type)">
                                                            Use
                                                        </button>
                                                    }
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>

                    <!-- Plugin Footer -->
                    <div class="plugin-footer">
                        <span class="plugin-id">ID: @plugin.Id</span>
                        <span class="plugin-path" title="@plugin.Path">@TruncatePath(plugin.Path)</span>
                    </div>
                </div>
            }
        }
    </div>

    <!-- Recent Audit Events -->
    <div class="audit-section">
        <div class="section-title">
            <h2>Plugin Activity Log</h2>
            <button class="refresh-btn-sm" @onclick="LoadAuditEvents">Refresh</button>
        </div>
        <div class="audit-log">
            @if (_auditEvents.Count == 0)
            {
                <p class="empty-audit">No plugin events recorded yet.</p>
            }
            else
            {
                @foreach (var evt in _auditEvents.Take(10))
                {
                    <div class="audit-entry @GetAuditClass(evt.EventType)">
                        <span class="audit-time">@evt.Timestamp.ToString("HH:mm:ss")</span>
                        <span class="audit-type">@evt.EventType</span>
                        <span class="audit-details">@evt.Details</span>
                    </div>
                }
            }
        </div>
    </div>
</div>

<style>
