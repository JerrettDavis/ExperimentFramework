@code {
    private List<PluginInfo> _plugins = [];
    private List<AuditLogEntry> _auditEvents = [];
    private bool _loading = true;
    private bool _reloading = false;
    private bool _dataLoaded = false;
    private string? _error;
    private string? _success;

    protected override void OnInitialized()
    {
        DashboardState.OnStateChanged += HandleStateChanged;
    }

    private void HandleStateChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        DashboardState.OnStateChanged -= HandleStateChanged;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !_dataLoaded)
        {
            _dataLoaded = true;
            await RefreshPlugins();
            StateHasChanged();
        }
    }

    private async Task RefreshPlugins()
    {
        _loading = true;
        _error = null;
        using var cts = new CancellationTokenSource(TimeSpan.FromSeconds(10));
        try
        {
            _plugins = await ExperimentApi.GetPluginsAsync().WaitAsync(cts.Token);
            var activeImpls = await ExperimentApi.GetActivePluginImplementationsAsync().WaitAsync(cts.Token);
            DashboardState.SyncPluginImplementationsFromApi(activeImpls);
            await LoadAuditEvents().WaitAsync(cts.Token);
        }
        catch (OperationCanceledException)
        {
            _error = "Request timed out. Please try again.";
        }
        catch (Exception ex)
        {
            _error = $"Failed to load plugins: {ex.Message}";
        }
        finally
        {
            _loading = false;
        }
    }

    private bool IsImplementationActive(string interfaceName, string pluginId, string implType)
    {
        var active = DashboardState.GetActivePluginImplementation(interfaceName);
        if (active == null) return false;
        return active.PluginId == pluginId && active.ImplementationType == implType;
    }

    private async Task ClearImplementation(string interfaceName)
    {
        try
        {
            await ExperimentApi.ClearActivePluginImplementationAsync(interfaceName);
            DashboardState.SetActivePluginImplementation(interfaceName, null);
            _success = $"Cleared active implementation for {interfaceName}";
            await LoadAuditEvents();
        }
        catch (Exception ex)
        {
            _error = $"Failed to clear: {ex.Message}";
        }
    }

    private async Task ReloadPlugin(string pluginId)
    {
        _reloading = true;
        try
        {
            await ExperimentApi.ReloadPluginAsync(pluginId);
            _success = $"Plugin '{pluginId}' reloaded successfully";
            await RefreshPlugins();
        }
        catch (Exception ex)
        {
            _error = $"Reload failed: {ex.Message}";
        }
        finally
        {
            _reloading = false;
        }
    }

    private async Task UnloadPlugin(string pluginId)
    {
        _reloading = true;
        try
        {
            await ExperimentApi.UnloadPluginAsync(pluginId);
            _success = $"Plugin '{pluginId}' unloaded";
            await RefreshPlugins();
        }
        catch (Exception ex)
        {
            _error = $"Unload failed: {ex.Message}";
        }
        finally
        {
            _reloading = false;
        }
    }

    private async Task UseImplementation(string pluginId, string interfaceName, string implName)
    {
        try
        {
            var result = await ExperimentApi.UsePluginImplementationAsync(pluginId, interfaceName, implName);
            if (result != null)
            {
                DashboardState.SetActivePluginImplementation(interfaceName, new ActivePluginImplementation
                {
                    PluginId = result.PluginId,
                    Interface = result.Interface,
                    ImplementationType = result.Implementation,
                    Alias = result.Alias,
                    ActivatedAt = DateTime.UtcNow
                });
            }
            _success = $"Now using {implName} for {interfaceName}. Go to Live Demo to see it in action!";
            await LoadAuditEvents();
        }
        catch (Exception ex)
        {
            _error = $"Failed to use implementation: {ex.Message}";
        }
    }

    private async Task LoadAuditEvents()
    {
        try
        {
            _auditEvents = await ExperimentApi.GetAuditLogAsync(20);
            _auditEvents = _auditEvents.Where(e =>
                e.EventType.Contains("Plugin", StringComparison.OrdinalIgnoreCase) ||
                e.EventType.Contains("Service", StringComparison.OrdinalIgnoreCase)).ToList();
        }
        catch { }
    }

    private void ToggleExpanded(string pluginId)
    {
        DashboardState.ToggleExpanded("plugins", pluginId);
    }

    private static string GetPluginIconClass(PluginInfo plugin)
    {
        if (plugin.Name.Contains("Pricing", StringComparison.OrdinalIgnoreCase)) return "pricing";
        if (plugin.Name.Contains("Analytics", StringComparison.OrdinalIgnoreCase)) return "analytics";
        if (plugin.Name.Contains("Recommendation", StringComparison.OrdinalIgnoreCase)) return "recommendation";
        return "default";
    }

    private static string GetPluginIconText(PluginInfo plugin)
    {
        if (plugin.Name.Contains("Pricing", StringComparison.OrdinalIgnoreCase)) return "$";
        if (plugin.Name.Contains("Analytics", StringComparison.OrdinalIgnoreCase)) return "A";
        if (plugin.Name.Contains("Recommendation", StringComparison.OrdinalIgnoreCase)) return "R";
        return "P";
    }

    private static string TruncatePath(string path)
    {
        if (path.Length <= 40) return path;
        return "..." + path[^37..];
    }

    private static string GetAuditClass(string eventType)
    {
        return eventType.ToLower().Replace(" ", "").Replace("_", "");
    }
