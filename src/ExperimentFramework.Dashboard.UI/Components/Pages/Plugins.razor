        color: #9ca3af;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .info-value {
        font-size: 0.875rem;
        color: var(--theme-text, #374151);
    }

    .info-value.enabled { color: #10b981; }
    .info-value.disabled { color: #6b7280; }

    /* Services Section */
    .services-section {
        border-top: 1px solid rgba(128,128,128,0.2);
        padding-top: 1rem;
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        cursor: pointer;
        padding: 0.5rem 0;
    }

    .section-header h4 {
        margin: 0;
        font-size: 0.875rem;
        color: var(--theme-text, #374151);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .toggle-icon {
        transition: transform 0.2s;
